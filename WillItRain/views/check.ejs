<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>Will it rain?</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <div class="container col-xxl-8 px-4 py-lg-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-lg-5">
            <div class="col-10 col-sm-8 col-lg-6">
                <% switch (weather) { case "Clouds" : %>
                    <%- include('cloudy') %>
                        <%break; case "Clear" :%>
                            <%- include('sunny.ejs') %>
                                <%break; case "Snow" :%>
                                    <%- include('flurries.ejs') %>
                                        <%break; case "Rain" :%>
                                            <%- include('rainy.ejs') %>
                                                <%break; case "Drizzle" :%>
                                                    <%- include('rainy.ejs') %>
                                                        <%break; case "Thunderstorm" :%>
                                                            <%- include('thunder-storm.ejs') %>
                                                                <%default: %>
                                                                    <img src="<%- imgSrc %>" alt="weatherIcon">
                                                                    <%break; } %>

            </div>
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">
                    <%- message %>
                </h1>
                <p class="lead">
                    <%- author %>
                </p>
            </div>
        </div>
    </div>
</body>

</html>