<body class="d-flex flex-column vh-100 overflow-hidden">
    <%- include('partials/header.ejs') %>
        <% if(locals.entry) { %>
            <% if(locals.edit) { %>
                <%- include('partials/edit.ejs') %>
                    <% } else { %>
                        <%- include('partials/entry.ejs') %>
                            <%} %>
                                <% } else if(!locals.newPost) { %>
                                    <%- include('partials/hero.ejs') %>
                                        <%- include('partials/entries.ejs') %>
                                            <% } else { %>
                                                <%- include('partials/newpost.ejs') %>
                                                    <% } %>
                                                        <%- include('partials/footer.ejs') %>
</body>

