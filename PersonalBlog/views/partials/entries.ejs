<div class="container-fluid mx-3 py-5 overflow-auto" style="max-height: 50vh;">
    <div class="list-group">
        <% if(locals.entries) locals.entries.forEach(entry=> { %>
            <a href="/viewpost?id=<%= entry.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3"
                aria-current="true">
                <img src="entry.png" alt="twbs" width="32" height="32" class="flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">
                            <%= entry.title %>
                        </h6>
                        <p class="mb-0 opacity-75">
                            <%= entry.message %>
                        </p>
                    </div>
                    <small class="opacity-50 text-nowrap">
                        <%= entry.date.toLocaleString() %>
                    </small>
                </div>
            </a>
            <% }); else { %>
                <h4 class="text-center tracking-widest">No entries found</h4>
                <%}%>

    </div>
</div>