<div class="container-fluid col-6 py-5">
    <div>
        <h1>Edit Post:</h1>
    </div>
    <form action="/editpost" method="POST" class="was-validated">
        <div class="form-group pt-5">
            <label for="titleInput">Title</label>
            <input type="text" class="form-control" id="titleInput" name="title" value="<%= entry.title %>" required>
        </div>
        <div class="form-group py-5 w-100 h-100">
            <label for="messageInput">Message:</label>
            <textarea rows="7" class="form-control" id="messageInput" name="message"
                required><%= entry.message %></textarea>
        </div>
        <div class="form-group w-100 invisible">
            <input type="text" class="form-control" id="titleInput" name="id" value="<%= entry.id %>" required>
        </div>
        <div class="container text-center">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>